{
    "name": "<%= appname %>",
    "version": "1.0.0",
    "description": "",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/@types/index.d.ts",
    "scripts": {
        "start": "ts-node src/index.ts",
        "watch": "nodemon",
        <% if (tests) { %>"test": "jest",<% } %>
        "clean": "rm -rf dist",
        "build": "npm-run-all clean build:esm build:cjs build:types",
        "build:cjs": "tsc -p tsconfig.prod.json --module CommonJS --outDir dist/cjs && echo { \"type\": \"commonjs\" } > dist/cjs/package.json",
        "build:esm": "tsc -p tsconfig.prod.json && echo { \"type\": \"module\" } > dist/esm/package.json",
        "build:types": "tsc -p tsconfig.prod.json --declaration --declarationMap --emitDeclarationOnly --declarationDir dist/@types"
    },
    "exports": {
        ".": {
            "import": "./dist/cjs/index.js",
            "export": "./dist/esm/index.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maxijonson/<%= appname %>.git"
    },
    "keywords": [],
    "files": [
        "dist"
    ],
    "author": "Tristan Chin",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/maxijonson/<%= appname %>/issues"
    },
    "homepage": "https://github.com/maxijonson/<%= appname %>#readme",
    "engines": {
        "node": "16.x"
    },
    "peerDependencies": {}
}
